{
  "$schema-template": "1.0.1",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "acriot": {
                "username": "$CONTAINER_REGISTRY_USERNAME_acriot",
                "password": "$CONTAINER_REGISTRY_PASSWORD_acriot",
                "address": "acriot.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "HomeModule": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../HomeModule>.debug}",
              "createOptions": {}
            }
          }
        },
        "StreamAnalyticsEdge": {
          "version": "1.0.0",
          "type": "docker",
          "status": "running",
          "restartPolicy": "always",
          "settings": {
            "image": "mcr.microsoft.com/azure-stream-analytics/azureiotedge:1.0.3",
            "createOptions": {}
          },
          "env": {
            "PlanId": {
              "value": "stream-analytics-on-iot-edge"
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "HomeModuleToStreamAnlyticsEdge": "FROM /messages/modules/HomeModule/outputs/* INTO BrokeredEndpoint(\"/modules/StreamAnalyticsEdge/inputs/Input1h\")",
          "StreamAnalyticsEdgeToIoTHub": "FROM /messages/modules/StreamAnalyticsEdge/outputs/* INTO $upstream",
          "HomeModuleToIoTHub": "FROM /messages/modules/HomeModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}